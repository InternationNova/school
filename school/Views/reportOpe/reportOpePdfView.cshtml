@model IEnumerable<school.Classes.reportOpePdf>

<style type="text/css">
td{
	font-size:10px;	
}
#tblRelatorio{
	border: solid thin #000;	
	margin:0px;
	border-collapse: collapse;
}
td{
	border: solid thin #000;
	padding:5px;
}
th{
	border: solid thin #000;	
	padding:5px;
}
</style>
  <table id="tblRelatorio" align="center" cellpadding="2" cellspacing="2" class>
            <thead>
              <tr>
                <th colspan="8"><img src="@Url.Content("~/Content/img/logo_senai.png")" alt="120x30" /><h2 align="center">Relatrio de OPEs</h2></th>
              </tr>
			  <tr>
                <th colspan="8"><h4>Escola: </h4></th>
              </tr>
             </thead>
            <tbody>
                 @foreach (var item in Model)
                 {
                     if (item.nome != "") { 
                        <tr>
								<th colspan="8">@item.nome</th>
							</tr>
							<tr>
                                <th align="center">Processo</th>
								<th align="center">Descrição </th>
								<th align="center">Quant.</th>
								<th align="center">Status</th>
								<th align="center">Data</th>
								<th align="center">Prev. Emb.</th>
								<th align="center">Guia Transp.</th>
								<th align="center">Mov. Materiais</th>
							  </tr>
                     
                     }
							
			
                    <tr>
                        <td> @item.numero_processo</td>
                        <td>@(item.codigo_smk + "-" + @item.descricao)</td>
						<td align="center">@item.quantidade</td>
						<td>@item.ps_descricao</td>
						<td>@item.data</td>
						<td>@item.previsao_embarque</td>
						<td>&nbsp;</td>
						<td>&nbsp;</td>
                  	</tr>
                 }
            </tbody>
        </table>