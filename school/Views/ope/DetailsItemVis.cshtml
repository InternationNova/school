@model school.Classes.opeItemDetails

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="theme-panel hidden xs hidden-sm">
				<div class="toggler">
				</div>
				<div class="toggler-close">
				</div>
				<div class="theme-options">
					
					<div class="theme-option">
						<span>
						Layout </span>
						<select class="layout-option form-control input-small">
							<option value="fluid" selected="selected">Fluid</option>
							<option value="boxed">Boxed</option>
						</select>
					</div>
					
					
					<div class="theme-option">
						<span>
						Sidebar Position </span>
						<select class="sidebar-pos-option form-control input-small">
							<option value="left" selected="selected">Left</option>
							<option value="right">Right</option>
						</select>
					</div>
					<div class="theme-option">
						<span>
						Footer </span>
						<select class="page-footer-option form-control input-small">
							<option value="fixed">Fixed</option>
							<option value="default" selected="selected">Default</option>
						</select>
					</div>
				</div>
</div>
<div class="row">
				<div class="col-md-12">
					<!-- BEGIN PAGE TITLE & BREADCRUMB-->
					<h3 class="page-title">
					Ope 
					</h3>
					<ul class="page-breadcrumb breadcrumb"> 
						<li class="btn-group" style = "display : none;">
							<button type="button" class="btn blue dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
							<span>Actions</span><i class="fa fa-angle-down"></i>
							</button>
							<ul class="dropdown-menu pull-right" role="menu">
								<li>
									<a href="#">Action</a>
								</li>
								<li>
									<a href="#">Another action</a>
								</li>
								<li>
									<a href="#">Something else here</a>
								</li>
								<li class="divider">
								</li>
								<li>
									<a href="#">Separated link</a>
								</li>
							</ul>
						</li>
						<li>
							<i class="fa fa-home"></i>
							<a href="">Ope</a>
							<i class="fa fa-angle-right"></i>
						</li>
                        <li>
							<i class="fa fa-home"></i>
							<a href="index.html">Details</a>
							<i class="fa fa-angle-right"></i>
						</li>
					
					</ul>
					<!-- END PAGE TITLE & BREADCRUMB-->
				</div>
</div>
<div class="row">
				<div class="col-md-12">
					<!-- BEGIN EXAMPLE TABLE PORTLET-->
					<div class="portlet box grey-cascade">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-globe"></i>Ope Table
							</div>
							<div class="tools" style = "display : none;">
								<a href="javascript:;" class="collapse">
								</a>
								<a href="#portlet-config" data-toggle="modal" class="config">
								</a>
								<a href="javascript:;" class="reload">
								</a>
								<a href="javascript:;" class="remove">
								</a>
							</div>
						</div>
						<div class="portlet-body">
							<div class="table-toolbar" style = "display: inline-block;">
                                      
                               <div class = "col-md-16">
                                    <div class = "portlet box red">
                                            <div class="portlet-title">
                                               <div class="caption">
								                    <i class="fa fa-cogs"></i>Visualizar Ítem
							                    </div>
                                            </div>
                                            <div class = "portlet-body">
                                                <div class = "table-scrollable">
                                                        <table class="table table-hover">
								                             <tbody>
								                                <tr>
									                                <td>
										                                 Escola
									                                </td>
									                                <td>
										                                 @Html.DisplayFor(model => model.nome)
									                                </td>
									                                
								                                </tr>
								                                <tr>
									                                <td>
										                                 Ítem
									                                </td>
									                                <td>
										                                 @Html.DisplayFor(model => model.item)
									                                </td>
									                        
								                                </tr>
								                                <tr>
									                                <td>
										                                 Memo
									                                </td>
									                                <td>
										                                 @Html.DisplayFor(model => model.memo)
									                                </td>
									                            </tr>    
                                                                <tr>
									                                <td>
										                                 Quantidade
									                                </td>
									                                <td>
										                                 @Html.DisplayFor(model => model.quantidade)
									                                </td>
									                            </tr>    
								                                
								                                <tr>
									                                <td>
										                                 Vlr. Unitário
									                                </td>
									                                <td>
										                                 @Html.DisplayFor(model => model.valor_unitario)
									                                </td>
									                        
								                                </tr>
                                                                <tr>
									                                <td>
										                                 Vlr. Total
									                                </td>
									                                <td>
										                                  @Html.DisplayFor(model => model.valor_total)
									                                </td>
									                        
								                                </tr>
                                                               
								                            </tbody>
								                        </table>
                                                </div>  
                                            </div>
                                       </div>
                                    </div>
                               <div class = "clr" style ="clear :both;"></div>
                               <div class = "col-md-16">
                                   <div class = "portlet box red">
                                            <div class="portlet-title">
                                               <div class="caption">
								                    <i class="fa fa-cogs"></i>Historico
							                    </div>
                                          </div>
                                            
                                   
                                          <div class = "portlet-body">
                                                <div class = "table-scrollable">
                                                   <table class="table table-hover">
                                                        <thead>
                                                            <th>
                                                               Situação 
                                                            </th>
                                                            <th>
                                                                Data
                                                            </th>
                                                            <th>
                                                                Excluir
                                                            </th>
                                                       
                                                          </thead>
                                                          <tbody>
                                                            @foreach (var item in Model.ope_itens)
                                                            {
                                                            <tr>
                                                                 <td>
                                                                    @Html.DisplayFor(modelItem => item.descricao)
                                                                 </td>
                                                                 <td>
                                                                     @Html.DisplayFor(modelItem => item.data)
                                                                 </td>
                                                                 <td>
                                                                    @Html.ActionLink("Excluir", "Delete", new { id = item.id })
                                                                 </td>
                                                               </tr>
                                                            }
                                                             </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                    </div>
                                   
                               </div>
                               <div class = "clr" style ="clear :both;"></div>
                               <div class = "col-md-16">
                                    <div class = "portlet box red">
                                            <div class="portlet-title">
                                               <div class="caption">
								                    <i class="fa fa-cogs"></i>Gastos
							                    </div>
                                          </div>
                                            
                                   
                                          <div class = "portlet-body">
                                                <div class = "table-scrollable">
                                                   <table class="table table-hover">
                                                        <thead>
                                                            <th>
                                                               Data 
                                                            </th>
                                                            <th>
                                                                Num. Doc.
                                                            </th>
                                                            <th>
                                                                Fornecedor
                                                            </th>
                                                             <th>
                                                                Valor
                                                            </th>
                                                             <th>
                                                                Excluir
                                                            </th>
                                                       
                                                          </thead>
                                                          <tbody>
                                                            @{
                                                                double total = 0;
                                                                }
                                                            @foreach (var item in Model.gastos)
                                                            {
                                                            <tr>
                                                                 <td>
                                                                    @Html.DisplayFor(modelItem => item.data)
                                                                 </td>
                                                                 <td>
                                                                     @Html.DisplayFor(modelItem => item.numero_documento)
                                                                 </td>
                                                                 <td>
                                                                     @Html.DisplayFor(modelItem => item.nome)                                                                 </td>
                                                                 <td>
                                                                     @Html.DisplayFor(modelItem => item.total)
                                                                     
                                                                 </td>
                                                                 <td>
                                                                      @Html.ActionLink("Excluir", "Delete", new { id = item.id })
                                                                 </td>
                                                               </tr>
                                                            }
                                                                <tr>
                                                                    <th colspan="3" align="right">Total</th>
                                                                    <th>@total</th>
                                                                </tr>
                                                                <tr>
                                                                    <th colspan="4" align="center">"Saldo Liberado:"</th> 
                                                                </tr>
                                                             </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                    </div>
                               </div>
                            </div>
                        </div>
</div>
                </div>
</div>