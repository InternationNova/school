@model school.Classes.gastospost

@{
    ViewBag.Title = "Create";
}

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="theme-panel hidden-xs hidden-sm">
				<div class="toggler">
				</div>
				<div class="toggler-close">
				</div>
				<div class="theme-options">
					
					<div class="theme-option">
						<span>
						Layout </span>
						<select class="layout-option form-control input-small">
							<option value="fluid" selected="selected">Fluid</option>
							<option value="boxed">Boxed</option>
						</select>
					</div>
					
					
					<div class="theme-option">
						<span>
						Sidebar Position </span>
						<select class="sidebar-pos-option form-control input-small">
							<option value="left" selected="selected">Left</option>
							<option value="right">Right</option>
						</select>
					</div>
					<div class="theme-option">
						<span>
						Footer </span>
						<select class="page-footer-option form-control input-small">
							<option value="fixed">Fixed</option>
							<option value="default" selected="selected">Default</option>
						</select>
					</div>
				</div>
</div>
<div class="row">
				<div class="col-md-12">
					<!-- BEGIN PAGE TITLE & BREADCRUMB-->
					<h3 class="page-title">
					Gastos 
					</h3>
					<ul class="page-breadcrumb breadcrumb"> 
						<li class="btn-group" style = "display : none;">
							<button type="button" class="btn blue dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
							<span>Actions</span><i class="fa fa-angle-down"></i>
							</button>
							<ul class="dropdown-menu pull-right" role="menu">
								<li>
									<a href="#">Action</a>
								</li>
								<li>
									<a href="#">Another action</a>
								</li>
								<li>
									<a href="#">Something else here</a>
								</li>
								<li class="divider">
								</li>
								<li>
									<a href="#">Separated link</a>
								</li>
							</ul>
						</li>
						<li>
							<i class="fa fa-home"></i>
							<a href="">Gastos</a>
							<i class="fa fa-angle-right"></i>
						</li>
                        <li>
							<i class="fa fa-home"></i>
							<a href="">Create</a>
							<i class="fa fa-angle-right"></i>
						</li>
					
					</ul>
					<!-- END PAGE TITLE & BREADCRUMB-->
				</div>
</div>
<div class="row">
				<div class="col-md-12">
					<!-- BEGIN EXAMPLE TABLE PORTLET-->
				        <div class="portlet box grey-cascade">
						        <div class="portlet-title">
							        <div class="caption">
								        <i class="fa fa-globe"></i>Cadastro de gastos
							        </div>
							        <div class="tools" style = "display:none;">
								        <a href="javascript:;" class="collapse">
								        </a>
								        <a href="#portlet-config" data-toggle="modal" class="config">
								        </a>
								        <a href="javascript:;" class="reload">
								        </a>
								        <a href="javascript:;" class="remove">
								        </a>
							        </div>
						        </div>
						        <div class="portlet-body">
							        <div class="table-toolbar">
                                                @using (Html.BeginForm(Model.gastos))
                                                {
                                                    @Html.ValidationSummary(true)
                                                 <fieldset>
                                                    <div class="editor-label">
                                                        Memo
                                                    </div>
                                                    <div class="editor-field">
                                                        @Html.EditorFor(model => model.gastos.memo)
                                                        @Html.ValidationMessageFor(model => model.gastos.memo)
                                                    </div>

                                                    <div class="editor-label">
                                                        Fornecedores
                                                    </div>
                                                    <div class="editor-field">
                                                         @Html.DropDownListFor(model => model.gastos.fornecedores_id,
                                                                     new SelectList(
                                                                          Model.fornecedores.ToList(),
                                                                         "id",
                                                                         "nome"))
                                                        
                                                    </div>

                                                    <div class="editor-label">
                                                       Tipo de Documento:
                                                    </div>

                                                    <div class="editor-field">
                                                         @Html.DropDownListFor(model => model.gastos.tipo_documentos_id,
                                                                     new SelectList(
                                                                          Model.tipodocumentos.ToList(),
                                                                         "id",
                                                                         "descricao"))
                                                        
                                                        

                                                    </div>

                                                    <div class="editor-label">
                                                        Data
                                                    </div>
                                                    <div class="editor-field">
                                                       @Html.EditorFor(model => model.gastos.data)
                                                       @Html.ValidationMessageFor(model => model.gastos.data)
                                                    </div>

                                                    <div class="editor-label">
                                                        Num. Documento:
                                                    </div>
                                                    <div class="editor-field">
                                                        @Html.EditorFor(model => model.gastos.numero_documento)
                                                        @Html.ValidationMessageFor(model => model.gastos.numero_documento)
                                                    </div>

                                                    <div class="editor-label">
                                                        Total:
                                                    </div>
                                                    <div class="editor-field">
                                                        @Html.EditorFor(model => model.gastos.total)
                                                        @Html.ValidationMessageFor(model => model.gastos.total)
                                                    </div>

                                                    

                                                     <p class ="buttonParam">
                                                        <input type="submit" value="Cadastro" id="sample_editable_1_new" class="btn green"/>
                                                     </p>
                                                </fieldset>
                                                }

                                                 <button id="sample_editable_1_new" class="btn green">
                                                    @Html.ActionLink("Voltar", "Index")
                                                </button>
                                            </div>
                                        </div>
                                    </div>
            <script type ="text/javascript">

                $("#gastos_data").mask("99/99/9999");
               
            
            </script>