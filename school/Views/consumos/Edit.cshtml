</div>
<div class="row">
				<div class="col-md-12">
					<!-- BEGIN EXAMPLE TABLE PORTLET-->
				        <div class="portlet box grey-cascade">
						        <div class="portlet-title">
							        <div class="caption">
								        <i class="fa fa-globe"></i>Consumo Edit
							        </div>
							        <div class="tools" style = "display:none;">
								        <a href="javascript:;" class="collapse">
								        </a>
								        <a href="#portlet-config" data-toggle="modal" class="config">
								        </a>
								        <a href="javascript:;" class="reload">
								        </a>
								        <a href="javascript:;" class="remove">
								        </a>
							        </div>
						        </div>
						        <div class="portlet-body">
							        <div class="table-toolbar">

                                        @using (Html.BeginForm()) {
                                            @Html.ValidationSummary(true)
                                            <fieldset>
                                               

                                                @Html.HiddenFor(model => model.id)
                                                
                                                <div class="editor-label">
                                                    Materia Prima
                                                </div>
                                                
                                                <div class="editor-field">
                                                         @Html.DropDownListFor(model => model.materia_primas_id,
                                                                     new SelectList(
                                                                          Model.materia_primas.ToList(),
                                                                         "id",
                                                                         "descricao"))
                                                     
                                                </div>
                                                <div class="editor-label">
                                                    Quantidade :
                                                </div>
                                                <div class="editor-field">
                                                    @Html.EditorFor(model => model.quantidade)
                                                    @Html.ValidationMessageFor(model => model.quantidade)
                                                </div>

                                                <div class="editor-label">
                                                    Unidade :
                                                </div>
                                                <div class="editor-field">
                                                    @Html.EditorFor(model => model.unidade)
                                                    @Html.ValidationMessageFor(model => model.unidade)
                                                </div>

                                               

                                                <p class="buttonParam">
                                                    <input type="submit" value="Salvar" id="sample_editable_1_new" class="btn green" />
                                                </p>
                                            </fieldset>
                                        }

                                        <button id="sample_editable_1_new" class="btn green">
                                            @Html.ActionLink("Voltar", "Index")
                                        </button>
                                    </div>
                                </div>
                            </div>
